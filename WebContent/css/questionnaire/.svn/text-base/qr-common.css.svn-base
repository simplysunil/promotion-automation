.tooltop {
         float: left;
         text-align: left;
         background: #fff;
         z-index: 1;
         border: 1px solid #428bca;
         box-shadow: 0 0 5px #ccc;
         font-size: 0.8em;
         position: absolute;
        /* width: 200px; */
         display:none;
         min-height: auto;
         padding:10px;
         word-break: break-all;
         min-width: 70px;
         max-width: 290px
         }
		 .tooltop:before, .tooltop:after {
			content: "";
			position: absolute;
			border-left: 10px solid transparent;
			border-right: 10px solid transparent;
			top: 102%;
			left: 30px;
			margin-left: -10px;
		}
	    .tooltop:before {
		   border-top: 10px solid #428bca;
		   margin-top: -1px;
	     }
		
		.tooltop:after {
			border-top: 10px solid #fff;
			margin-top: -3px;
			z-index: 1;
		 }

.customSelectClickQuest {
	background: url(../../images/icons/dd.png) right center #fff no-repeat;
	box-sizing: border-box;
	border: 1px solid #ccc;
	color: #3D3D3D;
	font-size: 12px;
	padding: 0px 28px 0px 5px;
	height: 25px;
	line-height: 25px;
	width: 195px;
	overflow: hidden;
	position: absolute;
	left: 0;
	top: 0;
	z-index: 99;
	white-space: nowrap;
}
